@model IEnumerable<BiblioTechA.Models.Book>
@{
    ViewData["Title"] = "Devolução";
}

<button type="button" class="btn btn-secondary btn-lg btn-block">Devolução</button>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Solicitante
            </th>
            <th>
                Data da Reserva
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <form asp-action="ReturnReservation" asp-route-id="@item.Id">
                    <input type="submit" class="btn btn-outline-success" value="Devolução" />
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoReserved)
            </td>
            <td>
                @Html.DisplayFor(model => item.ReservationDateRelease)
            </td>
        </tr>
        }
    </tbody>
</table>

@if (Model.Count() == 0)
{
    <br />
    <br />
    <div class="alert alert-primary" role="alert">
        Nenhum livro está reservado.
    </div>
}