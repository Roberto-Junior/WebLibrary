@using BiblioTechA.Models
@model UserReservedAndHistoricalBooks
@{
    ViewData["Title"] = "UserReservation";
}

<button type="button" class="btn btn-secondary btn-lg btn-block">Reservas</button>
<br />
<br />

<center><h1>RESERVA ATUAL</h1></center>

<form asp-action="UserReservation">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    Livro
                </th>
                <th>
                    Data da reserva
                </th>
                <th>
                    Reserva
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.actualReservedBook.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.actualReservedBook.ReservationDateRelease)
                </td>
                @if(Model.actualReservedBook != null)
                {
                    <td>
                        <input class="btn btn-outline-danger" value="Cancelar" type="submit" asp-route-id="@Model.actualReservedBook.Id" />
                    </td>
                }
            </tr>
        </tbody>
    </table>
</form>

<br />
<br />
<br />
<br />
<center><h1>HISTÓRICO DE RESERVAS</h1></center>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Livro
            </th>
            <th>
                Data da retirada
            </th>
            <th>
                Data da devolução
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.historicalReservedBook)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDateRelease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDateReturn)
                </td>
            </tr>
        }
    </tbody>
</table>